{
  "name": "nuvoleweb/robo-config",
  "description": "CI/developer-friendly configuration processor for Robo.",
  "type": "robo-tasks",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Antonio De Marco",
      "email": "antonio@nuvole.org"
    }
  ],
  "require": {
    "consolidation/robo": "^5.0"
  },
  "require-dev": {
    "drupal/coder": "^8.3",
    "phpro/grumphp": "^2.6",
    "phpunit/phpunit": "^11.3"
  },
  "autoload": {
    "psr-4": {
      "NuvoleWeb\\Robo\\Task\\Config\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NuvoleWeb\\Robo\\Tests\\": "./tests/src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpro/grumphp": true
    }
  }
}
